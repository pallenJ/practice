		<property name="url" value="jdbc:mysql://127.0.0.1:3306/exe00?useSSL=false&amp;serverTimezone=UTC">
		</property> -->
		<property name="driverClassName" value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy"></property>
		<property name="url" value="jdbc:log4jdbc:mysql://127.0.0.1:3306/exe00?autoReconnect=true&amp;useSSL=false&amp;useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=UTC">
		</property>
		<property name="username" value = "pjm"></property>
		<property name="password" value = "pjmpjm"></property>
	
	</bean>	
	
	<!-- Mybatis -->
	<bean id= "sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
